# Configurações de ambiente - NÃO COMMITAR ESTE ARQUIVO
# Copie este arquivo para .env e preencha com suas informações

# Segurança
SECRET_KEY=sua-chave-secreta-aqui-mude-isso
DEBUG=False

# Hosts permitidos (separados por vírgula)
ALLOWED_HOSTS=localhost,127.0.0.1,.herokuapp.com,.railway.app,.vercel.app

# Database (PostgreSQL para produção)
DATABASE_URL=postgres://usuario:senha@host:5432/nome_do_banco

# Para desenvolvimento local, use SQLite:
# DATABASE_URL=sqlite:///db.sqlite3
